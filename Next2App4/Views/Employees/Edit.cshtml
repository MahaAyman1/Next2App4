@model Employee
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" asp-controller="Employees">
    @Html.HiddenFor(model => model.EmployeeID)

    <table class="table table-bordered">
        <tr>
            <td>
                <label asp-for="Name"></label>
            </td>
            <td>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="city"></label>
            </td>
            <td>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="Email"></label>
            </td>
            <td>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="salary"></label>
            </td>
            <td>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="HDate"></label>
            </td>
            <td>
                <input asp-for="HDate" class="form-control" />
                <span asp-validation-for="HDate" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">No</a>
            </td>
        </tr>
    </table>
</form>

