@model EmpCourseDataModel

@{
    ViewData["Title"] = "Index";
}

<a asp-action="AddEmployee" asp-controller="Employees" class="btn btn-success"> Add Employee</a>
<br />
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Employees.SingleOrDefault()!.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Employees.SingleOrDefault()!.salary)</th>
        <th>@Html.DisplayNameFor(m => m.Employees.SingleOrDefault()!.Department.DepartmentName)</th>

        <th>Operation</th>
    </tr>

    @foreach (var i in Model.Employees)
    {
        <tr>
            <td>@i.Name</td>
            <td>@i.salary</td>
            <td> @i.Department.DepartmentName</td>
            <td>
                <a asp-action="Details" class="btn btn-outline-secondary" asp-route-id="@i.EmployeeID">Details</a>
                <a asp-action="Delete" class="btn btn-outline-secondary" asp-route-id="@i.EmployeeID">Delete</a>
                <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@i.EmployeeID">Edit</a>
            </td>
        </tr>
    }
</table>

<br />  
<br />

<a asp-action="Create" asp-controller="Courses" class="btn btn-success"> Add Courses </a>
<br />
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Courses.SingleOrDefault()!.CourseName)</th>
        <th>@Html.DisplayNameFor(m => m.Courses.SingleOrDefault()!.Period)</th>
        <th>Operation</th>
    </tr>

    @foreach (var i in Model.Courses)
    {
        <tr>
            <td>@i.CourseName</td>
            <td>@i.Period</td>
            <td>
                <a asp-action="Details" asp-controller="Courses" class="btn btn-outline-secondary" asp-route-id="@i.CourseID">Details</a>
                <a asp-action="Delete" asp-controller="Courses" class="btn btn-outline-secondary" asp-route-id="@i.CourseID">Delete</a>
                <a asp-action="Edit" asp-controller="Courses"  class="btn btn-outline-secondary" asp-route-id="@i.CourseID">Edit</a>
            </td>
        </tr>
    }
</table>


<br />
<br />
<h1> Student Info </h1>
<table class="table table-striped table-bordered">
    <tr>
        <th>Student Name </th>
        <th > City </th>
        <th>Operation</th>
    </tr>

    @foreach (var i in ViewBag.st)
    {
        <tr>
            <td>@i.StudentName</td>
            <td>@i.city</td>
            <td>
                <a asp-action="Details" class="btn btn-outline-secondary" asp-route-id="@i.StudentID">Details</a>
                <a asp-action="Delete" class="btn btn-outline-secondary" asp-route-id="@i.StudentID">Delete</a>
                <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@i.StudentID">Edit</a>
            </td>
        </tr>
    }
</table>
